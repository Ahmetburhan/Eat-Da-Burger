<h1>Eat-Da-Burger</h1>

<h2>Uneaten Burgers</h2>

<ul>
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>
				{{this.burger_name}}

				<form action='burgers/updateOne/{{this.id}}?_method=PUT' method='POST'>
					<input type='hidden' name='devoured' value='true'>
					<button type='submit'>EAT THIS!</button>
				</form>

			</li>
		{{/unless}}
	{{/each}}
</ul>

<h2>Eaten Burgers</h2>

<ul>
	{{#each burgers}}
		{{#if this.devoured}}
			<li>
				{{this.burger_name}}

			</li>
		{{/if}}
	{{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-update-form" action="burgers/insertOne" method="POST">

	<div class="form-group">
		<label for="bg">Burger Name:</label>
		<textarea type="text" name="name"></textarea>
		<button type="submit">Save Da Burger!</button>
	</div>
</form>
